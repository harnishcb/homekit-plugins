{
    "compilerOptions": {
        "target": "ES2021",
        "lib": [
            "ES2019",
            "ES2020"
        ],
        "module": "node16",
        "rootDir": "./src",
        "moduleResolution": "node16",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "preserveSymlinks": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}
